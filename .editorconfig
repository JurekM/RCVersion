root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,h,hpp,c}]
indent_style = space
indent_size = 2
max_line_length = 120

# MSBuild project files
[*.{vcxproj,vcxproj.filters,props,targets}]
indent_style = space
indent_size = 2

# Configuration files
[*.{json,xml}]
indent_style = space
indent_size = 2

# Resource files
[*.{rc,rc2}]
indent_style = space
indent_size = 2

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Batch files
[*.{bat,cmd}]
end_of_line = crlf